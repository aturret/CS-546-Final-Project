{{!--

What this page needs:
hotel information
review information
reviewUserId: the id of the user who wrote the review

--}}

{{#if error}}
<div class="error">
    <p>Error code {{statusCode}}: {{error}}</p>
</div>
{{/if}}
<h2>{{reviewTitle}}</h2>
<div class="hotelInfo">
    <div class="hotelName">
        <p>{{hotelName}}</p>
    </div>
    <div class="hotelPhoto"><img src="{{hotelPhoto}}"></div>
    <div class="hotelRating">
        <p>Rating: {{hotelRating}}</p>
    </div>

    <div class="hotelIntro">
        <div class="hotelAddress">
            <p>Address: {{hotelAddress}}</p>
        </div>
        <div class="hotelContacts">
            <p>Contacts: Phone: {{hotelPhone}} Email: {{hotelEmail}}</p>
        </div>
    </div>
</div>
<div class="reviewResult">
    <div class="reviewItem">
        <div class="reviewUserItem">
            <div class="reviewUserPhoto">{{userAvatar}}</div>
        </div>
        <div class="reviewContentItem">
            <div class="reviewTitle"><a href="/reviews/{{reviewId}}">{{reviewTitle}}</a></div>
            <div class="reviewRating">
                <p>{{reviewTating}}</p>
            </div>
            <div class="reviewComment">
                <p>{{reviewComment}}</p>
            </div>
            {{#if (eq reviewUserId user.userId)}}
            <div class="editReview">
                <button id="editReviewButton" onclick="editReview()">Edit</button>
                <div hidden="true" id="editReviewWindow">
                    <form action="/reviews/{{reviewId}}" method="PATCH">
                        <label for="reviewTitle">Title</label>
                        <input type="text" name="reviewTitle" placeholder="Review Title" value="{{reviewTitle}}">
                        <label for="reviewRating">Rating</label>
                        <select name="reviewRating">
                            <option value="1" {{#if (eq reviewRating 1)}}selected{{/if}}>1</option>
                            <option value="2" {{#if (eq reviewRating 2)}}selected{{/if}}>2</option>
                            <option value="3" {{#if (eq reviewRating 3)}}selected{{/if}}>3</option>
                            <option value="4" {{#if (eq reviewRating 4)}}selected{{/if}}>4</option>
                            <option value="5" {{#if (eq reviewRating 5)}}selected{{/if}}>5</option>
                        <label for="reviewComment">Comment</label>
                        <textarea name="reviewComment" placeholder="Review Comment">{{reviewComment}}</textarea>
                        <input type="hidden" name="hotelId" value="{{hotelId}}">
                        <input type="hidden" name="reviewId" value="{{reviewId}}">
                        <button type="submit">Submit</button>
                    </form>
                </div>
            </div>
            {{/if}}
            <div class="reviewVotes">
                <p>Do you think this review is useful?</p>
                <p>Upvote: {{reviewUpvotes}}</p>
                <p>Downvote: {{reviewDownvotes}}</p>
                <form action="/reviews/{{reviewId}}" method="PATCH">
                    <input type="hidden" name="hotelId" value="{{hotelId}}">
                    <input type="hidden" name="reviewId" value="{{reviewId}}">
                    <button type="submit" name="reviewVote" value="upvote">Yes</button>
                    <button type="submit" name="reviewVote" value="downvote">No</button>
                </form>
            </div>
        </div>
        {{#if managerReply}}
        <div class="managerReply">
            <p>Manager reply: {{managerReply}}</p>
        </div>
        {{/if}}
        {{#if (and (ne managerReply) (eq user.hotel hotelId))}}
        <div class="writeReply">
            <button class="writeReplyButton" onclick="writeReply()">Write Reply</button>
            <div hidden="true" class="writeReplyWindow">
                <form action="/reviews/{{reviewId}}" method="PATCH">
                    <textarea name="managerReply" placeholder="Reply to this review"></textarea>
                    <input type="hidden" name="hotelId" value="{{hotelId}}">
                    <input type="hidden" name="reviewId" value="{{reviewId}}">
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
        {{/if}}
    </div>
</div>
<div class="error" id="client">
    <p id="client-error"></p>
</div>
