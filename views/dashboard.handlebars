{{!--



--}}

{{#if errorMessage}}
<div class="error">
    <p>Error code {{status}}: {{errorMessage}}</p>
</div>
{{/if}}
<div class="Avatar">
    {{#if avatar}}
    <img src="{{avatar}}" alt="thumbnail not available">
    {{else}}
    <img src="/public/img/avatar.jpg" alt="default avatar">
    {{/if}}
</div>
<h2>{{username}}</h2>
<div class="information box">
    <div class="currentInformation left">
        <div class="userIdentity">
            <p>Identity: {{identity}}</p>
        </div>
        <div class="userFirstName">
            <p>First Name: {{firstName}}</p>
        </div>
        <div class="userLastName">
            <p>Last Name: {{lastName}}</p>
        </div>
        <div class="userEmail">
            <p>Email: {{email}}</p>
        </div>
        <div class="userPhone">
            <p>Phone: {{phone}}</p>
        </div>
    </div>
    {{!-- edit personal information --}}
    <div class="editInformation">
        <button id="editInformationButton" onclick="editInformation()">Edit</button>
        <div id="editInformationWindow" hidden="true">
            <form action="/user/dashboard/{{username}}/edit" method="PATCH" id="editInformation-form" class="my-form">
                <div class="userFirstName">
                    <input type="text" name="userFirstNameInput" id="userFirstNameInput" value="{{firstName}}">
                    <label for="userFirstNameInput">First Name</label>
                </div>
                <div class="userLastName">
                    <input type="text" name="userLastNameInput" id="userLastNameInput" value="{{lastName}}">
                    <label for="userLastNameInput">Last Name</label>
                </div>
                <div class="userEmail">
                    <input type="email" name="userEmailInput" id="userEmailInput" value="{{email}}">
                    <label for="userEmail">Email</label>
                </div>
                <div class="userPhone">
                    <input type="text" name="userPhoneInput" id="userPhoneInput" value="{{phone}}">
                    <label for="userPhone">Phone</label>
                </div>
                <div class="userPassword">
                    <input type="password" name="userPasswordInput" id="userPasswordInput">
                    <label for="userPassword">Password</label>
                </div>
                <div class="userNewPassword">
                    <input type="password" name="userNewPasswordInput" id="userNewPasswordInput" class="PasswordInput">
                    <label for="userPassword">New Password</label>
                </div>
                <div class="userConfirmNewPassword">
                    <input type="password" name="userConfirmNewPasswordInput" id="userConfirmNewPasswordInput"
                        class="confirmPasswordInput">
                    <label for="userConfirmPassword">Confirm New Password</label>
                </div>
                <button type="submit" id="editInformation">Submit</button>
            </form>
        </div>
    </div>
</div>
{{!-- manager/hotel application --}}
{{#if (eq user.identity "user")}}
<div class="newApplication">
    <button id="newHotelButton" onclick="newHotel()">Start Hotel Registration</button>
    <div id="newHotelWindow" hidden="true">
        <form action="/user/dashboard/{{username}}/upgrade" method="POST" class="my-form">
            <label for="hotelNameInput" id="hotelNameInput-label">
                Hotel Name:
            </label>
            <input type="text" name="hotelNameInput" id="hotelNameInput" value="{{hotelName}}">
            <label for="hotelPhoto" id="hotelPhoto-label">
                Hotel Photo:
            </label>
            <input type="file" name="hotelPhotoInput" id="hotelPhotoInput" accept="image/*" multiple>
            <div class="hotelContact">
                <label for="hotelPhoneInput" id="hotelPhoneInput-label">
                    Hotel Phone:
                </label>
                <input type="text" name="hotelPhoneInput" id="hotelPhoneInput" value="{{hotelPhone}}">
                <label for="hotelEmailInput" id="hotelEmailInput-label">
                    Hotel Email:
                </label>
                <input type="email" name="hotelEmailInput" id="hotelEmailInput" value="{{hotelEmail}}">
            </div>
            <div class="hotelAddress">
                <label for="hotelCityInput" id="hotelCityInput-label">
                    Hotel City:
                </label>
                <input type="text" name="hotelCityInput" id="hotelCityInput" value="{{hotelCity}}">
                <label for="hotelStreetInput" id="hotelStreetInput-label">
                    Hotel Street:
                </label>
                <input type="text" name="hotelStreetInput" id="hotelStreetInput" value="{{hotelStreet}}">
                <label for="hotelStateInput" id="hotelStateInput-label">
                    Hotel State:
                </label>
                <select id="hotelStateInput" class="state" name="hotelStateInput">
                </select>
                <label for="hotelZipcodeInput" id="hotelZipcodeInput-label">
                    Hotel Zip:
                </label>
                <input type="text" name="hotelZipcodeInput" id="hotelZipcodeInput" value="{{hotelZipcode}}">
                <input type="hidden" name="userIdInput" value="{{_id}}">
            </div>
                <button type="submit" id="newApplication">Apply for a new hotel</button>
        </form>
    </div>
</div>
{{/if}}
<div class="functionMenu">
    <div class="functionItem"><a href="/user/dashboard/{{username}}/order_history">My Orders</a></div>
    {{#if (eq user.identity "manager")}}
    <div class="functionItem"><a href="/user/dashboard/{{username}}/hotel_management">My Hotel</a></div>
    {{/if}}
    {{#if (eq user.identity "admin")}}
    <div class="functionItem"><a href="/admin">Admin</a></div>
    {{/if}}
    <div class="functionItem"><a href="/user/logout">Log Out</a></div>
</div>

<div class="error" id="client">
    <p id="client-error"></p>
</div>