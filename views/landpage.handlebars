{{!--

login form handlebar template

--}}

{{#if errorMessage}}
<div class="error">
    <p>Error code {{status}}: {{errorMessage}}</p>
</div>
{{/if}}

<p>Search for the best hotel you can have for your vacation!</p>
<form action="/" method="POST" id="search-form" class="search-form">
    <label for="hotelNameInput" id="hotelNameInput-label">  
        Hotel Name: 
    </label>
    <input type="text" name="hotelNameInput" id="hotelNameInput">
    <label for="hotelState" id="hotelState-label">  
        State:
    </label>
    <select id="hotelStateInput" name="hotelStateInput" class="state">
    </select>
    <label for="hotelCityInput" id="hotelCityInput-label">  
        City:
    </label>
    <input type="text" name="hotelCityInput" id="hotelCityInput">
    <label for="hotelZipcodeInput" id="hotelZipcodeInput-label">  
        Zipcode:
    </label>
    <input type="text" name="hotelZipcodeInput" id="hotelZipcodeInput">
    <button type="submit" id="search-button">Search</button>
</form>
<div class="error" id="client">
    <p id="client-error"></p>
</div>
{{#if (eq user.identity "guest")}}
<div class="new-user">
    <p>You can <a href="/user/register">register</a> or <a href="/user/login">login</a> first.</p>
</div>
{{/if}}
{{#if (eq user.identity "admin")}}
<div class="new-hotel">
    <a href="/hotel/createHotel">Create a hotel</a>
</div>
{{/if}}