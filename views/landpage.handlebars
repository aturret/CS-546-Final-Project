{{!--

login form handlebar template

--}}

{{#if error}}
<div class="error">
    <p>Error code {{statusCode}}: {{error}}</p>
</div>
{{/if}}

<p>Search for the best hotel you can have for your vacation!</p>
<form action="/" method="POST" id="login-form" class="my-form">
    <label for="hotalName" id="hotalName-label">  
        Hotel Name: 
    </label>
    <input type="text" name="hotalName" id="hotalName">
    <label for="hotelState" id="hotelState-label">  
        State:
    </label>
    <select id="hotelState" name="hotelState">
    </select>
    <label for="hotelCity" id="hotelCity-label">  
        City:
    </label>
    <input type="text" name="hotelCity" id="hotelCity">
    <label for="hotelZipcode" id="hotelZipcode-label">  
        Zipcode:
    </label>
    <input type="text" name="hotelZipcode" id="hotelZipcode">
    <button type="submit" id="login-button">Search</button>
</form>
<div class="error" id="client">
    <p id="client-error"></p>
</div>

{{#if (eq user.identity "guest")}}
<div class="new-user">
    <p>You can <a href="/user/register">register</a> or <a href="/user/login">login</a> first.</p>
</div>
{{/if}}