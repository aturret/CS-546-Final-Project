{{#if error}}
<div class="error">
    <p>Error code{{status_code}}: {{error}}</p>
</div>
{{/if}}
    
<p>Please Choose the room you need.</p>
<form action="/order" method="POST" id="registration-form" class="new-form">
    <label for="firstNameInput" id="firstNameInput-label">  
        Start Date:
    </label>
    <input type="text" name="firstNameInput" id="firstNameInput"></input>
    <label for="lastNameInput" id="lastNameInput-label">  
        End Date: 
    </label>
    <input type="text" name="lastNameInput" id="lastNameInput"></input>

    <label for="emailAddressInput" id="emailAddressInput-label">  
        Email: 
    </label>
    <input type="email" name="emailAddressInput" id="emailAddressInput"></input>
    <label for="passwordInput" id="passwordInput-label">  
        Password:
    </label>
    <input type="password" name="passwordInput" id="passwordInput"></input>
    <label for="confirmPasswordInput" id="confirmPasswordInput-label">  
        Confirm Password:
    </label>
    <input type="password" name="confirmPasswordInput" id="confirmPasswordInput"></input>
    {{!-- For the select dropdown, you will have two options "manager" and "user". --}}
    <label for="roleInput" id="roleInput-label">  
        Role:
    </label>
    <select name="roleInput" id="roleInput">
        <option value="manager">Manager</option>
        <option value="user">User</option>
    </select>
    <button type="submit" id="register-button">Register</button>
</form>
<div class="error" id="client">
    
</div>
<a href="/login">Already have an account? Click here to log-in!</a>