{{!--

    Purpose:
    This file is the main page of the website. It is the first page that the user will see when they visit the website. 
    It contains a search bar that allows the user to search for hotels.

--}}

{{#if error}}
<div class="error">
    <p>Error code {{statusCode}}: {{error}}</p>
</div>
{{/if}}

<p>Search for the best hotel you can have for your vacation!</p>
<form action="/hotel" method="POST" id="login-form" class="new-form">
    <label for="SearchBar" id="SearchBar-label">  
        Search: 
    </label>
    <input type="text" name="SearchBar" id="SearchBar">
</form>
<div class="error" id="client">
    <p id="client-error"></p>
</div>
{{#if (eq user.identity "guest")}}
<div class="new-user">
    <p>You can <a href="/register">register</a> or <a href="/login">login</a> first.</p>
</div>
{{/if}}